<div class="overlay login">
    <!-- LOGN IN FORM by Omar Dsoky -->
    <form action="/verify" method="post">
        <!--   con = Container  for items in the form-->
        <div class="con">
            <!--     Start  header Content  -->
            <header class="head-form">
                <h2>Log In</h2>
                <!--     A welcome message or an explanation of the login form -->
                <p>login here using your Email and Password</p>
            </header>
            <!--     End  header Content  -->
            <h4 class="text-danger">{{message}}</h4>
            <br>
            <div class="field-set">

                <!--   user name -->
                <span class="input-item">
                    <i class="fa fa-user-circle"></i>
                </span>
                <!--   user name Input-->
                <input class="username" id="username" type="username" placeholder="@Email" name="username" required>

                <br>
                <br>

                <!--   Password -->

                <span class="input-item">
                    <i class="fa fa-key"></i>
                </span>
                <!--   Password Input-->
                <input class="password" type="password" placeholder="Password" id="password" name="password" required>

                <!--      Show/hide password  -->
                <span>
                    <i class="fa fa-eye" aria-hidden="true" type="button" id="eye"></i>
                </span>


                <br>
                <br>

                <!--        buttons -->
                <!--      button LogIn -->
                <button class="login"> Log In </button>
            </div>



            <!--   other buttons -->
            <div class="other">
                <br>
                <!--      Forgot Password button-->
                <button class="btn submits frgt-pass" style="float: left;">Forgot Password</button>
                <!--     Sign Up button -->

                <button class="btn submits sign-up" id="frontsign" style="background-color: #B8F2E6;">Sign Up
                    <!--         Sign Up font icon -->
                    <i class="fa fa-user-plus" aria-hidden="true"></i>
                </button>
                <!--      End Other the Division -->
            </div>


            <!--   End Conrainer  -->
        </div>

        <!-- End Form -->
    </form>
</div>


<script>
    document.getElementById('frontsign').addEventListener('click', () => {
        window.location.href = '/signup';
    });
</script>